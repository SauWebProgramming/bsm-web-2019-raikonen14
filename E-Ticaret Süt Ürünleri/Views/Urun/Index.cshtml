@model IEnumerable<E_Ticaret_Süt_Ürünleri.Entity.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Yeni Ürün</h2>
    <hr/>
    <p>
        @Html.ActionLink("Yeni Ürün Oluştur", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Katagori.Isim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isim)
            </th>                
            <th>
                @Html.DisplayNameFor(model => model.Anasayfa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktif)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/Upload/@item.Resim" width="70"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Katagori.Isim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isim)
                </td>                                      
                <td>
                    @if (item.Anasayfa)
                    {
                        <label class="badge badge-success">
                            ✔
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            ✔
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @if (item.Aktif)
                    {
                        <label class="badge badge-success">
                            ✔
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            ✔
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) 
                   
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>