@using E_Ticaret_Süt_Ürünleri.Entity;

@model  Urun
@{
    ViewBag.Title = "Detay";
}
<div class="container ">
    <div class="row">
        <div class="col-md-6">

            <img src="/Upload/@Model.Resim" class="img-fluid rounded w-100">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Isim</h1>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12">
                    @if (Model.Aktif)
                    {
                        <span class="badge badge-primary">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }

                    <span class="product-number">#2342812</span>
                </div>
            </div>

            <div class="row mt-1">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Aciklama
                    </div>

                </div>

            </div>
            <div class="row mt-1">
                <div class="col-md-4">
                    <span class="bagde badge-success">53 Görüntüleme</span>
                </div>
                <div id="urunyorum" class="col-md-4">
                    <a href="#"> Yorum Yazınız..</a>
                </div>

            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="urunfiyat">₺ @Model.Fiyat</h4>

                </div>
            </div>

            <div class="row mt-1">
                <div class="col-md-12">
                    <button class="btn btn-success">Sepete Ekle</button>

                </div>
            </div>



        </div>

    </div>
    <div class="row mt-3">
        <div class="col-md-12">

            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
